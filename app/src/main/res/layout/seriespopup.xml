<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_margin="10dp"
    android:layout_width="350dp"
    android:background="@color/colorPrimaryDark"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_margin="20dp"
        android:layout_width="300dp"
        android:orientation="vertical"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/series_close"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/ic_close"
            android:layout_gravity="right"
            />
        <EditText
            style="@style/EditTextColor"
            android:id="@+id/edt_series_name"
            android:padding="5dp"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:hint="Series Name"
            android:textColorHint="@color/colorAccent"
            android:background="@drawable/searchbg"/>

        <EditText
            style="@style/EditTextColor"
            android:id="@+id/edt_series_image_link"
            android:layout_marginTop="20dp"
            android:padding="5dp"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:hint="Series Image link"
            android:textColorHint="@color/colorAccent"
            android:background="@drawable/searchbg"/>
        <EditText
            style="@style/EditTextColor"
            android:id="@+id/edt_series_video_link"
            android:layout_marginTop="20dp"
            android:padding="5dp"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:hint="Series Video link"
            android:textColorHint="@color/colorAccent"
            android:background="@drawable/searchbg"/>
        <TextView
            android:layout_marginTop="20dp"
            android:padding="5dp"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:text="Please Select Series Category"
            android:textColor="@color/colorAccent"/>
        <Spinner
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:id="@+id/series_category"
            />
        <LinearLayout
            android:layout_width="300dp"
            android:layout_height="70dp"
            android:orientation="horizontal">
            <Button
                android:layout_margin="10dp"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:text="Save"
                android:layout_weight="1"
                android:id="@+id/save_series"
                android:textColor="@color/colorWhite"
                android:background="@color/colorSuccess"/>

            <Button
                android:layout_margin="10dp"
                android:id="@+id/cancel_series"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@color/colorError"
                android:text="Cancel"
                android:textColor="@color/colorWhite" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>